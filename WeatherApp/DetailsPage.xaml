<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.DetailsPage"
             Title="DetailsPage">
    <StackLayout>
        <Label Text="{Binding Day}" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,20"/>
        <Label Text="{Binding Temperature}" FontSize="16" HorizontalOptions="Center" Margin="0,10"/>
        <Label Text="{Binding Details}" FontSize="14" HorizontalOptions="Center" Margin="0,10"/>

        <Button Text=" Back Forecast" Clicked="OnBackButtonClicked" HorizontalOptions="Center" Margin="20"/>

    </StackLayout>
</ContentPage>
  